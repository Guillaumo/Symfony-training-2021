{% extends 'base.html.twig' %}


{% block title %}{{conference}} - Nouveau commentaire{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header">
        <h1 class="card-title font-weight-bold text-primary">
            {{conference}}
        </h1>
        <h5 class="card-subtitle mb-2 text-muted">
            {% if conference.isInternational %}
                Conférence internationale
            {% else %}
                Conférence française
            {% endif %}

        </h5>
    </div>
    <div class="card-body">
        {{form(form_comment)}}
    </div>
</div>
{% endblock %}